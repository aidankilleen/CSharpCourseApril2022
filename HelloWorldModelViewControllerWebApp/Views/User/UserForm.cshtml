<h1>Edit User</h1>

<form action="/User/Edit" method="post">
    <div class="form-group">
        <!--<label>Id</label>-->
        <input class="form-control"
               type="hidden" 
               name="Id" 
               value="@ViewBag.User.Id" READONLY/>
    </div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input class="form-control"
               type="text"
               name="Name"
               value="@ViewBag.User.Name" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control"
               type="text" 
               name="Email" 
               value="@ViewBag.User.Email" />
    </div>
    <div class="checkbox">
        <label>
            Active
            <input type="checkbox" name="Active" checked="@ViewBag.User.Active" />
        </label>
    </div>
    <input type="submit" value="Save" class="btn btn-success"/>
    <a href="/User/Index" class="btn btn-secondary">Cancel</a>
</form>
